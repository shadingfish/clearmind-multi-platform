// tsconfig.json

{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["react-native-svg"],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "constants/**/*",
    "hooks/**/*",
    "assets/**/*",
    "scripts/**/*",
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
